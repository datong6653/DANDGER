    <script>
        function switchTab(type) {
            const btnMeasles = document.getElementById('btnMeasles');
            const btnDengue = document.getElementById('btnDengue');
            const secMeasles = document.getElementById('sectionMeasles');
            const secDengue = document.getElementById('sectionDengue');

            if (type === 'measles') {
                btnMeasles.classList.add('tab-active');
                btnMeasles.classList.remove('text-slate-600');
                btnDengue.classList.remove('tab-active');
                btnDengue.classList.add('text-slate-600');
                
                secMeasles.classList.remove('content-hidden');
                secDengue.classList.add('content-hidden');
            } else {
                btnDengue.classList.add('tab-active');
                btnDengue.classList.remove('text-slate-600');
                btnMeasles.classList.remove('tab-active');
                btnMeasles.classList.add('text-slate-600');
                
                secDengue.classList.remove('content-hidden');
                secMeasles.classList.add('content-hidden');
            }
        }
    </script>
